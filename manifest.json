{
    "manifest_version": 3,
    "name": "Dork Saver",
    "author": "Dark Yagami",
    "version": "1.0.0",
    "description": "Save and manage your Google dork search history for easy reuse",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "notifications",
        "contextMenus"
    ],
    "host_permissions": [
        "https://www.google.com/*",
        "https://google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*",
                "https://google.com/search*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Dork History Manager"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
